<% if defined?(image) && image %>
  <%= image_tag image.attachment.url(:product), :itemprop => "image",:class => "MagicZoomPlus",:style=>'rel="zoom-width:290px; zoom-height:152px"' %>
<% else %>
  <%= product_image(@product, :itemprop => "image",:class=>'MagicZoomPlus',:style=>'rel="zoom-width:290px; zoom-height:152px"') %>
<% end %>

